{
    "name": "clarkwinkelmann/flarum-ext-composer-page",
    "description": "Dedicated discussion composer page for Flarum",
    "keywords": [
        "flarum",
        "composer"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2"
    },
    "require-dev": {
        "flarum/tags": "*"
    },
    "authors": [
        {
            "name": "Clark Winkelmann",
            "homepage": "https://clarkwinkelmann.com/",
            "email": "clark.winkelmann@gmail.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/clarkwinkelmann/flarum-ext-composer-page",
        "forum": "https://discuss.flarum.org/d/31564"
    },
    "autoload": {
        "psr-4": {
            "ClarkWinkelmann\\ComposerPage\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Composer Page",
            "category": "feature",
            "icon": {
                "name": "fas fa-feather",
                "backgroundColor": "#684ba6",
                "color": "#fff"
            },
            "optional-dependencies": [
                "flarum/tags"
            ]
        }
    }
}
